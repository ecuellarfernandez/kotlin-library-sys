<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|clip_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgLibro"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblLibroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Nombre del libro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblAutorItemMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Autor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblCalificacionLibroMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:gravity="center|start|center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Calificacion"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEditarLibroItem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:backgroundTint="#2196F3"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="25dp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/btnDeleteLibroItem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:backgroundTint="#F44336"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="25dp"
        app:iconTint="#FFFFFF" />

</LinearLayout>